{
  "name": "ado-review",
  "version": "0.1.1",
  "description": "AI-powered code review for Azure DevOps pull requests",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
