    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.41",
    "@ai-sdk/google": "^3.0.24",
    "@ai-sdk/openai": "^3.0.26",
    "ai": "^6.0.78",
    "ollama": "^0.6.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "wxt": "^0.20.14",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
